{
  "name": "hero_manager",
  "scripts": {
    "build:client": "npx webpack --mode=production --config webpack.client.config.js",
    "build:server": "npx webpack --mode=production --config webpack.server.config.js",
    "build": "concurrently \"npm run build:client\" \"npm run build:server\"",
    "build:client:dev": "npx webpack --mode=development --config webpack.client.config.js",
    "build:server:dev": "npx webpack --mode=development --config webpack.server.config.js",
    "build:dev": "concurrently \"npm run build:client:dev\" \"npm run build:server:dev\"",
    "start": "node dist/server.bundle.js",
    "listen:client:dev": "npx webpack --watch --mode=development --config webpack.client.config.js",
    "listen:server:dev": "npx webpack --watch --mode=development --config webpack.server.config.js",
    "nodemon:dev": "nodemon --watch \"dist/server.bundle.js\" --exec \"npm run start\"",
    "start:dev": "concurrently \"npm run listen:client:dev\" \"npm run listen:server:dev\" \"npm run nodemon:dev\""
  },
  "version": "0.0.1",
  "author": "John M Naglick <jnaglick@gmail.com>",
  "devDependencies": {
    "@types/koa": "2.0.52",
    "@types/koa-static": "4.0.1",
    "@types/node": "12.12.0",
    "concurrently": "^5.0.0",
    "html-webpack-plugin": "3.2.0",
    "nodemon": "1.19.4",
    "ts-loader": "6.2.1",
    "typescript": "3.6.4",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "koa": "2.11.0",
    "koa-static": "5.0.0",
    "preact": "^10.0.5"
  }
}
